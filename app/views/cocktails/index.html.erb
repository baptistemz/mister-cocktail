<div class="container">
  <% @cocktails.each do |cocktail| %>

    <div class="col-xs-12 col-sm-6 col-md-4 col-lg-3">
      <div class="card">
        <span class="card-bg" style="background-image:url('<%=cocktail.picture.url(:medium)%>')"></span>
        <span class="card-shadow"></span>
        <span class="card-description"><%=cocktail.name%></span>
        <span class="card-text">
          <h2><%=cocktail.name%></h2>
        </span>
        <%= link_to cocktail_path(cocktail) do %>
          <div class="card-link"></div>
        <%end%>
      </div>
    </div>

  <%end%>
  <br>
  <p class="col-sm-12 margin-10" ><%= link_to('Add a niew cocktail', new_cocktail_path) %></p>
</div>
